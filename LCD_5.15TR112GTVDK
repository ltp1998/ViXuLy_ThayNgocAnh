#INCLUDE <TV_16F887.C>
#INCLUDE <TV_LCD.C>
UNSIGNED CHAR I,GIAY,PHUT;
CONST UNSIGNED CHAR HANG1[16]={"DONG HO:        "};
CONST UNSIGNED CHAR HANG2[16]={"*TP HO CHI MINH*"};
VOID LCD_HIENTHI()
{
   LCD_COMMAND(0X8E);
   DELAY_US(10);
   LCD_DATA((GIAY/10)+0X30);
   LCD_DATA((GIAY%10)+0X30);
   
   LCD_COMMAND(0X8B);
   DELAY_US(10);
   LCD_DATA((PHUT/10)+0X30);
   LCD_DATA((PHUT%10)+0X30);
}
VOID MAIN()
{
   SET_TRIS_E(0X00);
   SET_TRIS_D(0X00);
   LCD_SETUP();
   LCD_COMMAND(0X80); DELAY_US(10);
   FOR(I=0;I<16;I++)
   {LCD_DATA(HANG1[I]);}
   LCD_COMMAND(0XC0); DELAY_US(10);
   FOR(I=0;I<16;I++)
   {LCD_DATA(HANG2[I]);}
   WHILE(TRUE)
   {
      FOR(PHUT=0;PHUT<60;PHUT++)
      {
         FOR(GIAY=0;GIAY<60;GIAY++)
         {
            LCD_HIENTHI();
            DELAY_US(50);
         }
      }
   }
}
